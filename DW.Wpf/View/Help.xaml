<Window x:Class="DW.Wpf.View.Help"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DistWin - Help"
        Height="400" MinHeight="400"
        Width="600" MinWidth="600"
        WindowStyle="SingleBorderWindow">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Label>
                <TextBlock>
                    Contact Ceruus OY, if you need any assistance using the software.
                </TextBlock>
            </Label>
        </Grid>
        <Button Grid.Row="1" Click="closeHelp">Close</Button>
    </Grid>
</Window>
